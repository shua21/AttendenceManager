<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shua21.attendancemanager.studentActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/student_listview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/student_button_save"
        android:clickable="false"
        android:layout_below="@+id/student_button_add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학생추가"
        android:id="@+id/student_button_add"
        android:layout_below="@+id/student_edit"
        android:layout_toRightOf="@+id/student_imageview"
        android:layout_toEndOf="@+id/student_imageview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/student_button_save"
        android:layout_alignTop="@+id/student_button_cancel"
        android:layout_toLeftOf="@+id/student_button_cancel"
        android:layout_toStartOf="@+id/student_button_cancel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/student_edit"
        android:textSize="20dp"
        android:layout_alignRight="@+id/student_button_attend"
        android:layout_alignEnd="@+id/student_button_attend"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/student_imageview"
        android:layout_toRightOf="@+id/student_imageview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:id="@+id/student_button_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_height="wrap_content"
        android:text="출석받기"
        android:id="@+id/student_button_attend"
        android:layout_above="@+id/student_listview"
        android:layout_toEndOf="@+id/student_button_add"
        android:layout_alignTop="@+id/student_button_add"
        android:layout_toRightOf="@+id/student_button_add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="클래스삭제"
        android:id="@+id/student_Button_Del"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/student_imageview"
        android:layout_alignParentTop="true"
        android:src="@drawable/classimg1"
        android:layout_above="@+id/student_listview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/student_Button_Del"
        android:layout_alignEnd="@+id/student_Button_Del" />

</RelativeLayout>
