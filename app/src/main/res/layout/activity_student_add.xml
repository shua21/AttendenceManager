<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shua21.attendancemanager.studentAddActivity"
    android:id="@+id/학번">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="이름"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/add_edit_name"
        android:layout_toStartOf="@+id/add_edit_name"
        android:layout_below="@+id/imageView2"
        android:layout_alignBottom="@+id/add_edit_name"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="학번"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/add_edit_stuid"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/add_edit_name"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/add_button_del"
        android:layout_alignEnd="@+id/add_button_del" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/student"
        android:layout_gravity="right|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:id="@+id/add_button_del"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:id="@+id/add_button_cancel"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignTop="@+id/add_button_del"
        android:layout_toLeftOf="@+id/add_button_del"
        android:layout_toStartOf="@+id/add_button_del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/add_button_save"
        android:layout_gravity="left|bottom"
        android:layout_alignTop="@+id/add_button_cancel"
        android:layout_toLeftOf="@+id/add_button_cancel"
        android:layout_toStartOf="@+id/add_button_cancel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/add_edit_phone"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="전화번호"
        android:id="@+id/textView4"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/add_edit_stuid"
        android:layout_toStartOf="@+id/add_button_save"
        android:gravity="center"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/add_edit_stuid"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/add_edit_phone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
